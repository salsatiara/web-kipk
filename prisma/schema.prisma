generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Alternatif {
  id            Int      @id @default(autoincrement())
  nisn          String
  nama          String
  penghasilan   Int
  jmlTanggungan Int
  nilai         Int
  rumah         Int
  listrik       Int
}

model Kriteria {
  id             Int      @id @default(autoincrement())
  kode           String
  kriteria       String
  rentang1       String
  bobot1         Int
  rentang2       String
  bobot2         Int
  rentang3       String
  bobot3         Int
  rentang4       String
  bobot4         Int
  rentang5       String
  bobot5         Int
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  password      String    @db.Text
  nisn          String?   @unique
  role          String
  refreshToken  String?   @db.Text
}